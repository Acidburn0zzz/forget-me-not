{
  "name": "forget-me-not-web-extension-builder",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "web-ext run",
    "test": "cross-env TS_NODE_FILES=true nyc mocha test/**/*.ts",
    "release": "npm run build-release && npm run pack",
    "build": "webpack --mode=development",
    "build-release": "webpack --mode=production",
    "pack": "web-ext build -i src test coverage *.json \"*.js\" \"dist/*.map\" -i !manifest.json",
    "lint": "tslint -p ."
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/**/*",
      "docs/**/*",
      "test/**/*",
      "dist/**/*",
      "src/index.ts",
      "**/*.d.ts",
      "./*.js"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "author": "Santo Pfingsten",
  "license": "Zlib",
  "devDependencies": {
    "@types/chai": "^4.2.1",
    "@types/markdown-it": "0.0.8",
    "@types/mocha": "^5.2.7",
    "@types/tldjs": "^2.3.0",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^5.2.1",
    "css-loader": "^3.2.0",
    "markdown-it": "^9.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.0",
    "node-sass": "^4.12.0",
    "nyc": "^14.1.1",
    "punycode": "^2.1.1",
    "sass-loader": "^8.0.0",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.13",
    "tldjs": "^2.3.1",
    "ts-keycode-enum": "^1.0.6",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tsx-dom": "^0.8.3",
    "typescript": "^3.6.2",
    "web-ext": "^3.1.1",
    "webextension-polyfill-ts": "^0.10.0",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8",
    "wet-layer": "^1.0.1"
  },
  "dependencies": {}
}
