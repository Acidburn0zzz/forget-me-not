{
  "name": "forget-me-not-web-extension-builder",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cross-env TS_NODE_FILES=true nyc mocha test/**/*.ts",
    "release": "run-s build-release pack",
    "all": "run-s build",
    "build": "webpack --mode=development",
    "build-release": "webpack --mode=production",
    "pack": "web-ext build -i src test coverage *.json \"*.js\" \"dist/*.map\" -i !manifest.json",
    "lint": "tslint -p ."
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage/**/*",
      "docs/**/*",
      "test/**/*",
      "dist/**/*",
      "src/index.ts",
      "**/*.d.ts",
      "./*.js"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "author": "Santo Pfingsten",
  "license": "Zlib",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/markdown-it": "0.0.7",
    "@types/mocha": "^5.2.5",
    "@types/tldjs": "^2.3.0",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^1.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "markdown-it": "^8.4.2",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.2.0",
    "punycode": "^2.1.1",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.10",
    "tldjs": "^2.3.1",
    "ts-keycode-enum": "^1.0.6",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tsx-dom": "^0.8.3",
    "typescript": "^3.3.3",
    "webextension-polyfill-ts": "^0.8.9",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "wet-layer": "^1.0.1"
  },
  "dependencies": {}
}
